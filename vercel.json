{
    "version": 2,
    "builds": [
        {
            "src": "api/vercel_app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "templates/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/templates/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/vercel_app.py"
        }
    ]
}
